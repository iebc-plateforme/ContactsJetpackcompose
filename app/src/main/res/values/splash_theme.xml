<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Set the splash screen background, animated icon, and animation duration. -->
        <item name="windowSplashScreenBackground">@color/splash_background</item>

        <!-- Use the launcher foreground icon -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        
        <!-- Background color behind the icon (circle) -->
        <item name="windowSplashScreenIconBackgroundColor">@color/splash_icon_background</item>

        <!-- Set the theme of the Activity that directly follows your splash screen. -->
        <item name="postSplashScreenTheme">@style/Theme.contacts</item>
    </style>
</resources>
