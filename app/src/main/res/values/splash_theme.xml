<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Set the splash screen background -->
        <item name="windowSplashScreenBackground">@color/splash_background</item>

        <!-- Use custom contacts icon for splash -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_splash_icon</item>

        <!-- Icon background color (transparent for modern look) -->
        <item name="windowSplashScreenIconBackgroundColor">@android:color/transparent</item>

        <!-- Animation duration (500ms) -->
        <item name="windowSplashScreenAnimationDuration">500</item>

        <!-- Brand logo image (optional, can be added later) -->
        <!-- <item name="windowSplashScreenBrandingImage">@drawable/branding_logo</item> -->

        <!-- Set the theme of the Activity that directly follows splash screen -->
        <item name="postSplashScreenTheme">@style/Theme.contacts</item>
    </style>
</resources>
